<h1>EAT DA BURGER!</h1>

<h2>If you can dream it, you can eat it!</h2>


<h2>Create Your Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="name" />
    {{!-- <input type="hidden" id="devour" name="devoured" value="0"/> --}}
  </div>

  <button type="submit">Add Burger</button>
</form>

<h2>Burger to Eat</h2>
<ul>
  {{#each burger}}
    {{#unless devoured}}
      {{burger_name}}
        <button class="devour" data-id="{{id}}" data-devour="{{devoured}}">
        Devour it!</button>
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers</h2>
<ul>
  {{#each burger}}
    {{#if devoured}}
      {{burger_name}}
    {{/if}}
  {{/each}}
</ul>

